if project.image.src.includes("/videos/")
    a.project.video-div(href=`/projects/${project.path}`)
        div.video-block(style=`align-items: ${project.image.anchor == 'bottom' ? 'flex-end' : 'center'};`)
            video.bgvid(autoplay="autoplay" loop="loop" height=project.image.height)
                source(src=project.image.src)
            div.video-message
                h2= project.name
                p= project.logline
else
    a.project(
        href=`/projects/${project.path}`,
        style=`background-image: url(${project.image.src}); background-position: center ${project.image.anchor || 'center'}`
    )
        h2= project.name
        p= project.logline